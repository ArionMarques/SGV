                                                        'rgba(255, 99, 132, 0.2)',
                                                    ],
                                                    borderWidth: 1
                                                }]
                                        },
                                        options: {
                                           scales: {
                                        y: {
                                            type: 'linear',
                                            display: true,
                                            position: 'left',
                                        },
                                        y1: {
                                            type: 'linear',
                                            display: true,
                                            position: 'right',

                                            // grid line settings
                                            grid: {
                                                drawOnChartArea: false, // only want the grid lines for one axis to show up
                                            },
                                        },
                                    }
