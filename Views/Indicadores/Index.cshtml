<form method="post">
    <div class="wrapper">
        <!-- Page Content  -->
        <div id="content">

            <div class="grupo-entrada">
                <div class="col-4">
                    <div class="list-group" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action ativo" id="list-menu-list" data-bs-toggle="list" href="#" role="tab" aria-controls="list-menu">Indicadores</a>
