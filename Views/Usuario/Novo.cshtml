@model List<SGV.Models.Usuario>
@using Microsoft.AspNetCore.Http
@{
    string Login = Context.Session.GetString("Login");

}
@{
    string resultado = Context.Session.GetString("Resultado_Cad_Usuario");
}
@{
    ViewData["Title"] = "Cadastro de Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function() {
        $('.js-example-basic-multiple').select2();
    });
</script>
<link href="~/css/Informatica/principal.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<div class="box-container">
    <div class="box-titulo">
        <!--Box com o título-->
        <h5 class="card-title">Cadastro de usuários</h5>
    </div>
    <form method="post" action="~/usuario/pesquisar">
    <div class="wrapper">
        <div id="content">
            <!-- Page Content  -->
            <div class="grupo-entrada">
                <!--Input de pesquisa para o nome do usuário-->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Digite o usário para pesquisar" aria-label="Recipient's username" aria-describedby="button-addon2" name="Nome" id="Nome">

                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Pesquisar</button>
                    </div>
                </div>
                @if (resultado == "sim")
                {
                    <table class="table table-striped" id="tbUsuarios">
                        <thead>
                            <tr>
                                <th scope="col" class="table-venax">#</th>
                                <th scope="col" class="table-venax">Código do Operador</th>
                                <th scope="col" class="table-venax">Nome</th>
                                <th scope="col" class="table-venax">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <th scope="row"></th>
                                    <td>@usuario.Operador</td>
                                    <td>@usuario.Nome</td>
                                    <td>
                                        <a href="/usuario/atualizar" class="btn">Editar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>

</form>
    <div class="box-conteudo">
        <!--começo do box com conteúdo-->
        <div class="box">
            <label>Selecione as permissões</label>
            <select class="js-example-basic-multiple" name="states[]" multiple="multiple" style="width:300px">
                <option value="AL">Suporte</option>
                <option value="WY">Editar</option>
                <option value="WY">Apagar</option>
            </select>
        </div>
    </div>
</div>



