    <div class="primeiro-box-cadastrar">
        <div class="card">
            <form class="form-horizontal">
                <div class="card-body">
                    <h4 class="card-title">Informações pessoais</h4>
                    <div class="form-group row">
                        <label for="fname"
                               class="col-sm-3 text-end control-label col-form-label">Nome</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="fname"
                                   placeholder="Primeiro nome aqui">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-end control-label col-form-label">
                            Sobrenome
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="lname" placeholder="Sobrenome aqui">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 mt-3">Setor</label>
                        <div class="col-md-9">
